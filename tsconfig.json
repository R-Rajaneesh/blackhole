{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "incremental": false,
    "outDir": "./build/",
    "baseUrl": ".",
  },
  "buildOptions": { "verbose": false, "traceResolution": false, "dry": false },

  "include": ["**/*.ts", "**/*.js", "**/*.ejs", "**/*.css", "**/*.jpg", "**/*.ico"],
  "exclude": ["node_modules", "build.js"]
}
